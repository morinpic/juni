<div class="hero" style="background-image: url(<%= hero_path(@products) %>);">
</div>
<ul class="card-list">
  <% @products.each do |p| %>
    <li class="card">
      <%= link_to p, class: 'card__inner' do %>
        <div class="card__img">
          <%= image_tag p.pictures[0].image.url("m"), width: '200', height: '200' %>
        </div>
        <div class="card__body">
          <p class="card__time"><%= p.created_at.strftime('%Y.%m.%d') %></p>
          <h2 class="card__title"><%= p.title %></h2>
          <p class="card__txt"><%= p.body %></p>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>
